/*
 *			rt/Cakefile
 */
#define CONFIGDEFS	RT_CONFIG

#define SRCDIR	rt
#define PRODUCTS	rt rtrad rtpp rtray rtshot rtwalk rtcheck
#define	SRCSUFF	.c
#define MANSECTION	1

#include "../Cakefile.defs"
#include "../Cakefile.prog"

/* light.h material.h mathtab.h rad.h rdebug.h */
#define FILES	\
	rtshot \
	rt do worker \
	view viewpp viewray viewrad viewcheck \
	text cloud mathtab \
	material refract stack \
	plastic cook wray spm light cmd \
	marble stxt

/* Explicit composition of each product */

#define	RT_OBJ	rt.o do.o worker.o text.o cloud.o view.o wray.o \
		mathtab.o material.o refract.o stack.o plastic.o \
		cook.o spm.o light.o cmd.o marble.o stxt.o

#if defined(old_CRAY1)
/* XMP UNICOS version, sigh */
#	define	XMP_MULTI	/lib/multi/libc.o \
		/lib/multi/libu.o \
		/lib/multi/libm.o 

rt:	RT_OBJ LIBRT
	echo "nodeflib;symbols=off;map=stat;stack=200000+60000;heap=50000+50000" >segldr.cmds
	segldr -ort RT_OBJ LIBRT LIBFB LIBSYSV LIBMALLOC XMP_MULTI segldr.cmds
#else

rt:	RT_OBJ LIBRT
	CC LDFLAGS RT_OBJ LIBRT LIBFB RT_LIBES LIBSYSV LIBMALLOC LIBES -o rt

#endif

#define RTRAY_OBJ	rt.o do.o worker.o viewray.o \
			wray.o mathtab.o cmd.o material.o

rtray:	RTRAY_OBJ LIBRT
	CC LDFLAGS RTRAY_OBJ LIBRT LIBFB RT_LIBES LIBSYSV LIBMALLOC LIBES -o rtray

#define RTPP_OBJ	rt.o do.o worker.o viewpp.o mathtab.o \
			cmd.o material.o

rtpp:	RTPP_OBJ LIBRT
	CC LDFLAGS RTPP_OBJ LIBRT LIBFB RT_LIBES LIBSYSV LIBMALLOC LIBES -o rtpp

#define RTRAD_OBJ	rt.o do.o worker.o viewrad.o mathtab.o \
			cmd.o material.o

rtrad:	RTRAD_OBJ LIBRT
	CC LDFLAGS RTRAD_OBJ LIBRT LIBFB RT_LIBES LIBSYSV LIBMALLOC LIBES -o rtrad

#define RTCHECK_OBJ	rt.o do.o worker.o viewcheck.o \
			mathtab.o cmd.o material.o

rtcheck: RTCHECK_OBJ LIBRT
	CC LDFLAGS RTCHECK_OBJ LIBRT LIBFB RT_LIBES LIBSYSV LIBMALLOC LIBES -o rtcheck

rtshot:	rtshot.o LIBRT
	CC LDFLAGS rtshot.o LIBRT RT_LIBES LIBSYSV LIBMALLOC LIBES -o rtshot

rtwalk:	rtwalk.o LIBRT
	CC LDFLAGS rtwalk.o LIBRT RT_LIBES LIBSYSV LIBMALLOC LIBES -o rtwalk

#include "../Cakefile.rules"
